{
    "info": {
        "name": "Plan API Smoke Tests",
        "_postman_id": "12345678-abcd-ef00-1234-56789abcdef0",
        "description": "Smoke test collection for Plan CRUD API with assertions",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Healthcheck",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "http://localhost:3000/health",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "health"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Healthcheck returns 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "pm.test(\"Response has ok=true\", function () {",
                            "    var json = pm.response.json();",
                            "    pm.expect(json.ok).to.eql(true);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "Create Plan",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Smoke Test Plan\",\n  \"budget\": 12345\n}"
                },
                "url": {
                    "raw": "http://localhost:3000/plans",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "plans"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Plan created successfully\", function () {",
                            "    pm.response.to.have.status(201);",
                            "    var json = pm.response.json();",
                            "    pm.expect(json).to.have.property('id');",
                            "    pm.expect(json.name).to.eql('Smoke Test Plan');",
                            "    pm.collectionVariables.set('planId', json.id);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "List Plans (with pagination)",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "http://localhost:3000/plans?page=1&pageSize=5",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "plans"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "pageSize",
                            "value": "5"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Plans listed successfully\", function () {",
                            "    pm.response.to.have.status(200);",
                            "    var json = pm.response.json();",
                            "    pm.expect(json).to.have.property('data');",
                            "    pm.expect(json.meta).to.have.property('page');",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "Get Plan By ID",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "http://localhost:3000/plans/{{planId}}",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "plans",
                        "{{planId}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Fetched plan details\", function () {",
                            "    pm.response.to.have.status(200);",
                            "    var json = pm.response.json();",
                            "    pm.expect(json).to.have.property('id');",
                            "    pm.expect(json.id).to.eql(Number(pm.collectionVariables.get('planId')));",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "Update Plan",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Updated Smoke Plan\",\n  \"budget\": 9999,\n  \"status\": \"RUNNING\"\n}"
                },
                "url": {
                    "raw": "http://localhost:3000/plans/{{planId}}",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "plans",
                        "{{planId}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Plan updated successfully\", function () {",
                            "    pm.response.to.have.status(200);",
                            "    var json = pm.response.json();",
                            "    pm.expect(json.name).to.eql('Updated Smoke Plan');",
                            "    pm.expect(json.status).to.eql('RUNNING');",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "Delete Plan",
            "request": {
                "method": "DELETE",
                "url": {
                    "raw": "http://localhost:3000/plans/{{planId}}",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "plans",
                        "{{planId}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Plan deleted successfully\", function () {",
                            "    pm.response.to.have.status(204);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        }
    ],
    "variable": []
}